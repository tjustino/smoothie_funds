/ favicon
= favicon_link_tag
- [16, 32].each do |size|
  = favicon_link_tag "favicon-#{size}x#{size}.png", rel: "icon", type: "image/png"

/ Appple specific
= favicon_link_tag "safari-pinned-tab.svg", rel: "mask-icon", type: nil, color: "#bf3060"
- [57, 60, 72, 76, 114, 120, 144, 152, 180].each do |size|
  = favicon_link_tag "apple-touch-icon-#{size}x#{size}.png", rel: "apple-touch-icon", type: "image/png"

/ Chrome specific
= favicon_link_tag "manifest.json", rel: "manifest", type: nil

/ meta
meta name="apple-mobile-web-app-title"  content="Smoothie Funds"
meta name="application-name"            content="Smoothie Funds"
meta name="theme-color"                 content="#bf3060"

/ meta Microsoft specific
meta name="msapplication-TileColor"         content="#bf3060"
meta name="msapplication-square70x70logo"   content="#{image_path "mstile-70x70.png"}"
meta name="msapplication-square150x150logo" content="#{image_path "mstile-150x150.png"}"
meta name="msapplication-wide310x150logo"   content="#{image_path "mstile-310x150.png"}"
meta name="msapplication-square310x310logo" content="#{image_path "mstile-310x310.png"}"