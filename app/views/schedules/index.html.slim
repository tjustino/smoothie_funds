/ Welcome
- unless @all_user_schedules.any?
  = render "welcome"

/ Header
.row.align-items-center.justify-content-between.mb-3
  .col
    h2
      = t('.listing_schedules', current_account: @current_account.name)
      span.badge.badge-secondary#total = @nb_schedules
  .col-md-auto
    / New schedule
    h2 = link_to (fa_icon "plus-circle",  text: t('.new_schedule')), \
                                          new_account_schedule_path, \
                                          class: "btn btn-primary"

/ Table
.row#content-table
  table.table.table-striped#magic-table
    thead
      tr
        th
        th = t('.next_time')
        th = t('.frequency')
        th = t('.category')
        th.text-right = t('.amount')
        th = t('.comment')
        th

    tbody#listing
      = render partial: "schedule", locals: { schedules:  @schedules,
                                              next_time:  t('.next_time'),
                                              frequency:  t('.frequency'),
                                              category:   t('.category'),
                                              amount:     t('.amount'),
                                              comment:    t('.comment') }

/ More schedules
.row.justify-content-center.mb-3
  = image_tag "loading.gif", style: "display:none;", class: "loading"

  - if @nb_schedules >= @limit
    = button_to t('.more_schedules'), \
                account_schedules_path(@current_account), \
                { method: :get, \
                  class:  "btn btn-primary", \
                  id:     "more_items" }
