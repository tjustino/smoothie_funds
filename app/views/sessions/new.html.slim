.columns.is-centered
  .column.is-narrow
    = form_with(url: login_path, class: "box") do |form|
      .field.has-text-centered
        = image_tag "_icon.svg"
      .tabs.is-fullwidth
        ul
          li.is-active = link_to icon_text("fa-solid fa-right-to-bracket", t(".login")), login_path
          li = link_to icon_text("fa-solid fa-user-plus", t(".create_user")), new_user_path
      / email
      .field
        = label_tag :email, t(".email"), class: "label"
        .control.has-icons-left
          = form.email_field :email, class: "input", placeholder: t(".email"), autofocus: true
          span.icon.is-left = icon("fa-solid fa-envelope")
      / password
      .field
        = label_tag :password, t(".password"), class: "label"
        .control.has-icons-left
          = form.password_field :password, class: "input", placeholder: t(".password")
          span.icon.is-left = icon("fa-solid fa-lock")
      / login button
      .mt-5
        = form.submit t(".login"), class: "button is-success is-fullwidth"

