.modal.is-active#welcomeModal
  .modal-background
  .modal-card
    header.modal-card-head
      p.modal-card-title.is-size-6-mobile = t(".welcome")
      button.delete onclick="hideModal('welcomeModal')"
    section.modal-card-body
      .content = t(".content", new_icon: icon("fa-solid fa-circle-plus"),
                               transactions_icon: icon("fa-regular fa-credit-card"),
                               schedules_icon: icon("fa-regular fa-calendar-days")).html_safe
    footer.modal-card-foot
      button.button.is-success onclick="hideModal('welcomeModal')" = t(".close")
