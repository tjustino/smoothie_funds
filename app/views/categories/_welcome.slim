.modal.fade#welcomeModal tabindex="-1" role="dialog" aria-labelledby="welcomeModal"
  .modal-dialog role="document"
    .modal-content
      .modal-header
        h4.modal-title = t('.welcome')
        button.close type="button" data-dismiss="modal" aria-hidden="true" = icon("fas fa-times")
      .modal-body = t('.content', new_icon: icon("fas fa-plus-circle"), \
                                  transactions_icon: icon("far fa-credit-card"), \
                                  schedules_icon: icon("far fa-calendar-alt")).html_safe
      .modal-footer
        button.btn.btn-success type="button" data-dismiss="modal" = t('.close')
