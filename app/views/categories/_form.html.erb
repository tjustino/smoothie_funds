<%= form_with(model: shallow_args(@current_account, @category), class: "box", data: { turbo: false }) do |form| %>
  <div class="content has-text-centered">
    <%= icon_text("fa-solid fa-tags", title) %>
    <hr />
  </div>

  <%# name %>
  <div class="field">
    <%= form.label :name, t(".name"), class: "label" %>
    <div class="control has-icons-left">
      <%= form.text_field :name, class: input_class_for(@category, :name), placeholder: t(".name") %>
      <span class="icon is-left">
        <%= icon("fa-solid fa-quote-left") %>
      </span>
      <% @category.errors.full_messages_for(:name).each do |message| %>
        <p class="help is-danger">
          <%= message %>
        </p>
      <% end %>
    </div>
  </div>

  <%# hidden %>
  <div class="field">
    <%= form.label :hidden, t(".hidden"), class: "checkbox" do %>
      <%= form.check_box :hidden %>
      <%= " " + t(".hidden") %>
    <% end %>
  </div>

  <%# submit button %>
  <div class="mt-5">
    <%= form.submit class: "button is-success is-fullwidth" %>
  </div>
<% end %>
