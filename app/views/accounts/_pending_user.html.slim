.form-group.row
  = f.label :pending_user, t('.pending_user'), class: "col-sm-4 col-form-label"
  .col
    = f.email_field :email, class: "form-control"
  .col-auto
    = link_to (fa_icon "undo", text: t('.no_longer_propose')), \
              unpend_path, \
              method: :delete, \
              class: "btn btn-warning"