<%= turbo_stream.append "listing", partial: "account", locals: { accounts: @accounts,
                                                                 name:     t(".name"),
                                                                 init_bal: t(".initial_balance"),
                                                                 share:    t(".share") } %>

<% if @nb_accounts > @nb_items %>
  <%= turbo_stream.replace "items" do %>
    <%= turbo_frame_tag "items", src: accounts_path(offset: @nb_items, format: :turbo_stream), loading: "lazy" %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "items" %>
<% end %>
