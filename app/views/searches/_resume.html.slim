table.table.is-fullwidth
  tbody
    / accounts
    tr.is-size-7
      th.is-narrow = t(".accounts")
      td = joined_accounts_names(@current_accounts, search.accounts)

    / amounts
    tr.is-size-7
      th.is-narrow = t(".amount")
      - if not search.min.blank? and not search.max.blank?
        td = t(".between_amount", min: number_to_currency(search.min), max: number_to_currency(search.max))
      - elsif not search.min.blank? and search.max.blank?
        td = t(".more_than", min: number_to_currency(search.min))
      - elsif search.min.blank?      and not search.max.blank?
        dtd = t(".less_than", max: number_to_currency(search.max))
      - else
        td = t(".no_restriction")

    / date
    tr.is-size-7
      th.is-narrow = t(".date")
      - if not search.before.blank? and not search.after.blank?
        td = t(".between_date", before: l(search.before), after: l(search.after))
      - elsif not search.before.blank? and search.after.blank?
        td = t(".before", before: l(search.before))
      - elsif search.before.blank? and not search.after.blank?
        td = t(".after", after: l(search.after))
      - else
        td = t(".no_restriction")

    / categories
    tr.is-size-7
      th.is-narrow = t(".categories")
      td = joined_categories_names(@current_accounts, search.accounts, search.categories)

    / comment
    tr.is-size-7
      th.is-narrow = t(".comment")
      - if search.operator == "like" and search.comment.present?
        td = t(".like", comment: search.comment)
      - elsif search.operator == "like" and search.comment.blank?
        td = t(".without_comment")
      - elsif search.operator == "not_like" and search.comment.present?
        td = t(".not_like", comment: search.comment)
      - elsif search.operator == "not_like"  and search.comment.blank?
        td = t(".with_comment")
      - else
        td = t(".no_restriction")

    / checked
    tr.is-size-7
      th.is-narrow = t(".checked")
      - if search.checked == "yep"
        td = t(".yep")
      - elsif search.checked == "nop"
        td = t(".nop")
      - else
        td = t(".checked_or_not")
