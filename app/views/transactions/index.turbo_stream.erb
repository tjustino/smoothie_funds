<%= turbo_stream.append "listing", partial: "transaction", locals: { transactions: @transactions,
                                                                     checked:      t(".checked"),
                                                                     date:         t(".date"),
                                                                     category:     t(".category"),
                                                                     debit:        t(".debit"),
                                                                     credit:       t(".credit"),
                                                                     balance:      t(".balance"),
                                                                     comment:      t(".comment") } %>

<% if @nb_transactions > @nb_items %>
  <%= turbo_stream.replace "items" do %>
    <%= turbo_frame_tag "items", src: account_transactions_path(@current_account, offset: @nb_items, format: :turbo_stream), loading: "lazy" %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "items" %>
<% end %>
